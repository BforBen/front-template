@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var LegacyMode = (bool?)ViewData["LegacyMode"] ?? false;
}

@section HeadScripts
{
    <!-- Start HeadScripts -->
    <!-- End HeadScripts -->
}

@section BeforePrimaryNavigation
{
    <!-- Start BeforePrimaryNavigation -->
    <!-- End BeforePrimaryNavigation -->
}

@section PrimaryNavigation
{
    <!-- Start PrimaryNavigation -->
    @if (LegacyMode)
    {
        <li>@Html.ActionLink("Switch to normal", "Index", "Home", new { mode = "" }, null)</li>
    }
    else
    {
        <li>@Html.ActionLink("Switch to legacy", "Index", "Home", new { mode = "legacy" }, null)</li>
    }
    <!-- End PrimaryNavigation -->
}

@section ServiceStage
{
    <!-- End ServiceStage -->
    <div class="service-stage">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <span class="label label-stage label-live">LIVE</span> This is a demo – your <a href="https://github.com/GuildfordBC/front-template/issues/new" title="Send feedback">feedback</a> will help us to improve it.
                </div>
            </div>
        </div>
    </div>
    <!-- End ServiceStage -->
}

@section Breadcrumb
{
    <!-- Start Breadcrumb -->
    <li><a href="~/">Pattern library demo</a></li>
    @if (LegacyMode)
    {
        <text>[legacy mode]</text>
    }
    <!-- End Breadcrumb -->
}

@section Footer
{
    <!-- Start Footer -->
    <div class="col-xs-12">
        <p>Footer content</p>
    </div>
    <!-- End Footer -->
}

@section FooterScripts
{
    <!-- Start FooterScripts -->
    <!-- End FooterScripts -->
}

@RenderBody()